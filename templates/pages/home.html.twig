{% extends 'base.html.twig' %}

{% block title 'Agence DI' %}
        
{% block stylesheets %}{% endblock %}


{% block body %}
<div class = "container d-flex justify-content-around mt-3 mb-3"> 
    <div class="dropdown">
            <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown">
            Types de biens ?
            </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">Maisons</a>
                    <a class="dropdown-item" href="#">Appartements</a>
                    <a class="dropdown-item" href="#">Lofts</a>
                    <a class="dropdown-item" href="#">Terrains</a>
                    <a class="dropdown-item" href="#">Garages/Parkings</a>
            </div>
            </div>
            <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown">
                Localisation
            </button>
                <div class="dropdown-menu ">
                    <a class="dropdown-item" href="#">Rayon</a>
                </div>
            </div>
            <div class="dropdown">
            <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown">
                Budget ?
            </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">Prix €</a>
                </div>
            </div>
            <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown">
                Surface Habitable
            </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">surface M2</a>
                </div>
            </div>
            <div class="dropdown">
            <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown">
                Nombre De chambres
            </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">Nombre de chambres</a>
                </div>
    </div>
</div>
	<div class="container ">
            
    </div>
	
    <div class="jumbotron text-center">
    <h1>Bienvenue chez Decoopman Immobilier</h1>
      <p class=" text-success text-uppercase">Je veux acheter, faites-moi rêver ! </p>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
            <img src="{{ '/images/properties/empty.jpg' }}" alt="First slide" style="width:20%; height:auto;"> 
            </div>
            <div class="carousel-item">
            <img src="{{ '/images/properties/empty.jpg' }}" alt="Second slide" style="width:20%; height:auto;">
            </div>
            <div class="carousel-item">
            <img src="{{ '/images/properties/decoopman immo.jpg' }}" alt="Third slide" style="width:20%; height:auto;">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        </div>
    </div>
    <div class="container">
        <h2>Les derniers biens</h2>
        <div class="row flex ">
        {% for property in properties %}
            <div class="col-3">
                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">
                        <a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.title }}</a>
                        </h5>
                        <p class="card-text">{{ property.city }} ({{ property.postalCode }})</p>
                        <div class="text-primary" style="font-weight: bold;font-size: 2rem;">{{ property.formattedPrice }} €</div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}