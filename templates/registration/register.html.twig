{% extends 'base.html.twig' %}

{% block title "S'enregistrer" %}

{% block body %}

<div class="container mt-4 bg-greeny">
    
{{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword.first) }}
